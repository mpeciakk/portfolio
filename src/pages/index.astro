<style>
  .content {
    position: relative;
    z-index: 1;
    color: white;
    text-align: center;
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .planet-info {
    margin-top: 2rem;
    background: rgba(0, 0, 0, 0.5);
    padding: 1rem;
    border-radius: 8px;
  }

  body {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
  }
</style>
