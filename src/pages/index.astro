---
import SolarSystem from "../components/SolarSystem.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Portfolio - Solar System</title>
  </head>
  <body>
    <SolarSystem />

    <div class="content">
      <h1>Welcome to My Universe</h1>
      <p>
        Explore my skills and interests through this interactive solar system.
      </p>
